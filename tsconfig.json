{
  "include": [
    "cli/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": false,
    "module": "commonjs",
    "rootDir": "cli",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "target": "es2016"
  }
}